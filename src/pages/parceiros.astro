---
import MainLayout from "../layouts/MainLayout.astro";
import Partners from "../components/Partners.astro";
---

<MainLayout title="Parceiros | Mateus Arquiteto">
  <section class="section py-32">
    <div class="max-w-6xl mx-auto px-6">
      <div class="text-center mb-16 animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">Parceiros</h2>
        <p class="text-lg text-gray-600">
          Empresas e profissionais que confiam no nosso trabalho
        </p>
      </div>

      <Partners
        partners={[
          { name: "Empresa A", logo: "/images/logo-a.png" },
          { name: "Empresa B", logo: "/images/logo-b.png" },
          { name: "Empresa C", logo: "/images/logo-c.png" },
          { name: "Empresa D", logo: "/images/logo-d.png" },
        ]}
      />
    </div>
  </section>
</MainLayout>