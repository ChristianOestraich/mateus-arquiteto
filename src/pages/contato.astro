---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Contato | Mateus Arquiteto">
  <section class="section py-32">
    <div class="max-w-3xl mx-auto px-6">
      <div class="text-center mb-12 animate-fade-in-up">
        <h2 class="text-4xl md:text-5xl font-bold mb-4">Fale com o escritório</h2>
        <p class="text-lg text-gray-600">
          Entre em contato para discutir seu próximo projeto
        </p>
      </div>

      <form class="card-glass p-8 md:p-12 space-y-6 animate-fade-in">
        <div>
          <input
            type="text"
            class="w-full p-4 rounded-lg bg-white/50 border border-white/20 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all outline-none"
            placeholder="Nome"
            required
          />
        </div>

        <div>
          <input
            type="email"
            class="w-full p-4 rounded-lg bg-white/50 border border-white/20 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all outline-none"
            placeholder="E-mail"
            required
          />
        </div>

        <div>
          <input
            type="text"
            class="w-full p-4 rounded-lg bg-white/50 border border-white/20 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all outline-none"
            placeholder="Assunto"
            required
          />
        </div>

        <div>
          <textarea
            class="w-full p-4 rounded-lg bg-white/50 border border-white/20 focus:border-indigo-500 focus:ring-2 focus:ring-indigo-500/20 transition-all outline-none resize-none"
            rows="6"
            placeholder="Mensagem"
            required
          ></textarea>
        </div>

        <button
          type="submit"
          class="w-full px-8 py-4 rounded-full bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold hover:shadow-xl hover:-translate-y-1 transition-all duration-300"
        >
          Enviar
        </button>
      </form>
    </div>
  </section>
</MainLayout>