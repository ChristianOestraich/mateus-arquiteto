    <footer
      style="
      background: #706d6d;
      padding: 0.8rem 0;
      border-top: 1px solid #555555;
    "
    >
      <div
        style="
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1rem;
        display: flex;
        justify-content: center;
        text-align: center;
        color: #000000;
        font-size: 0.9rem;
      "
      >
        <p>© 2025 — Todos os direitos reservados.</p>
      </div>
    </footer>

    <script>
      // Menu hamburguer
      const burger = document.getElementById("burger");
      const menu = document.getElementById("menu");

      burger?.addEventListener("click", () => {
        document.body.classList.toggle("menu-open");
        menu?.classList.toggle("open");
      });

      // Fecha menu ao clicar nos links
      document.querySelectorAll(".menu a").forEach((link) => {
        link.addEventListener("click", () => {
          document.body.classList.remove("menu-open");
          menu?.classList.remove("open");
        });
      });

      // Fecha menu com Escape
      document.addEventListener("keydown", (e) => {
        if (
          e.key === "Escape" &&
          document.body.classList.contains("menu-open")
        ) {
          document.body.classList.remove("menu-open");
          menu?.classList.remove("open");
        }
      });

      const form = document.getElementById("contactForm") as HTMLFormElement;
      const successModal = document.getElementById("successModal");
      const closeModalBtn = document.getElementById("closeModal");

      form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        const button = form.querySelector(
          ".submit-button"
        ) as HTMLButtonElement;
        const buttonText = button.querySelector(".button-text") as HTMLElement;
        const buttonLoading = button.querySelector(
          ".button-loading"
        ) as HTMLElement;

        // Mostrar loading
        buttonText.style.display = "none";
        buttonLoading.style.display = "inline";
        button.disabled = true;

        try {
          const formData = new FormData(form);

          // Enviar para FormSubmit
          const response = await fetch(
            "https://formsubmit.co/christianoestraich@gmail.com",
            {
              method: "POST",
              body: formData,
              headers: {
                Accept: "application/json",
              },
            }
          );

          if (response.ok) {
            // Mostrar modal de sucesso
            successModal?.classList.add("show");

            // Limpar formulário
            form.reset();
          } else {
            alert("Erro ao enviar mensagem. Por favor, tente novamente.");
          }
        } catch (error) {
          console.error("Erro:", error);
          alert("Erro ao enviar mensagem. Por favor, tente novamente.");
        } finally {
          // Restaurar botão
          buttonText.style.display = "inline";
          buttonLoading.style.display = "none";
          button.disabled = false;
        }
      });

      // Fechar modal
      closeModalBtn?.addEventListener("click", () => {
        successModal?.classList.remove("show");
      });

      // Fechar modal clicando fora
      successModal?.addEventListener("click", (e) => {
        if (e.target === successModal) {
          successModal.classList.remove("show");
        }
      });

      // Máscara de telefone
      const phoneInput = document.getElementById("phone") as HTMLInputElement;

      phoneInput?.addEventListener("input", (e) => {
        let value = (e.target as HTMLInputElement).value.replace(/\D/g, "");

        if (value.length <= 11) {
          value = value.replace(/^(\d{2})(\d)/g, "($1) $2");
          value = value.replace(/(\d)(\d{4})$/, "$1-$2");
        }

        (e.target as HTMLInputElement).value = value;
      });
    </script>
