---
// src/components/ProjectCard.astro
interface Props {
  title: string;
  type: string;
  image: string;
  description: string;
}

const { title, type, image, description } = Astro.props;
---

<div class="project-card-wrapper">
  <!-- Image -->
  <div class="project-card-image-container">
    <img 
      src={image} 
      alt={title}
      class="project-card-image"
      loading="lazy"
    />
    <!-- Overlay -->
    <div class="project-card-overlay"></div>
    
    <!-- Type Badge -->
    <div class="project-card-badge-container">
      <span class="project-card-badge">
        {type}
      </span>
    </div>
  </div>

  <!-- Content -->
  <div class="project-card-content">
    <h3 class="project-card-title">
      {title}
    </h3>
    <p class="project-card-description">
      {description}
    </p>
    
    <!-- View Button -->
    <button class="project-card-button">
      Ver Detalhes
      <svg class="project-card-arrow" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
      </svg>
    </button>
  </div>
</div>

<style>
  .project-card-wrapper {
    position: relative;
    background-color: #ffffff;
    border-radius: 1rem;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all 0.5s ease;
  }

  .project-card-wrapper:hover {
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    transform: scale(1.05);
  }

  /* Image Container */
  .project-card-image-container {
    position: relative;
    overflow: hidden;
  }

  .project-card-image {
    width: 100%;
    height: 16rem;
    object-fit: cover;
    transition: transform 0.5s ease;
  }

  .project-card-wrapper:hover .project-card-image {
    transform: scale(1.1);
  }

  /* Overlay */
  .project-card-overlay {
    position: absolute;
    inset: 0;
    background-color: rgba(0, 0, 0, 0);
    transition: background-color 0.3s ease;
  }

  .project-card-wrapper:hover .project-card-overlay {
    background-color: rgba(44, 62, 80, 0.4);
  }

  /* Badge */
  .project-card-badge-container {
    position: absolute;
    top: 1rem;
    left: 1rem;
  }

  .project-card-badge {
    background-color: #E3735E;
    color: #ECF0F1;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  /* Content */
  .project-card-content {
    padding: 1.5rem;
  }

  .project-card-title {
    font-size: 1.25rem;
    font-family: serif;
    font-weight: bold;
    color: #2C3E50;
    margin-bottom: 0.5rem;
  }

  .project-card-description {
    color: #7F8C8D;
    line-height: 1.625;
  }

  /* Button */
  .project-card-button {
    margin-top: 1rem;
    color: #E3735E;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    transition: color 0.3s ease;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
  }

  .project-card-button:hover {
    color: #C85A45;
  }

  .project-card-arrow {
    width: 1rem;
    height: 1rem;
    transition: transform 0.3s ease;
  }

  .project-card-wrapper:hover .project-card-arrow {
    transform: translateX(0.25rem);
  }
</style>