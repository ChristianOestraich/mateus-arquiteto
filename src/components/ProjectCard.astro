---
interface Props {
  project: {
    cover: string;
    title: string;
    category: string;
    year: string;
    description: string;
    slug?: string;
  };
}

const { project } = Astro.props;
---

<article class="project-card animate-fade-in hover-glow">
  <a href={project.slug || '#'} class="block">
    <div class="overflow-hidden rounded-t-2xl">
      <img
        src={project.cover}
        alt={project.title}
        class="project-image"
        loading="lazy"
      />
    </div>
    
    <div class="project-info">
      <h3 class="project-title">{project.title}</h3>
      
      <p class="project-category">
        {project.category} â€¢ {project.year}
      </p>
      
      <p class="project-description">
        {project.description}
      </p>
    </div>
  </a>
</article>