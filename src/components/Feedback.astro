---
// Feedback.astro - Depoimentos de Clientes - ATUALIZADO COM PALETA TERRA COTA
const testimonials = [
  {
    id: 1,
    text: "Trabalhar com essa equipe foi transformador. A estratégia, os visuais, a atenção aos detalhes – tudo se encaixou perfeitamente. Finalmente, sentimos orgulho de como nos apresentamos.",
    author: "Theo Gardner",
    role: "Fundador",
    image: "/public/banners/image-feedback/feedback-01.jpeg",
    rating: 5
  },
  {
    id: 2,
    text: "A criatividade e o profissionalismo desta equipe superaram todas as expectativas. Cada detalhe foi pensado para criar um impacto duradouro.",
    author: "Laura Ribeiro",
    role: "Diretora de Marketing",
    image: "/public/banners/image-feedback/feedback-02.jpeg",
    rating: 5
  },
  {
    id: 3,
    text: "Projeto executado com excelência. A equipe demonstrou conhecimento técnico e sensibilidade artística em cada etapa do processo.",
    author: "Carlos Mendes",
    role: "CEO",
    image: "/public/banners/image-feedback/feedback-03.jpeg",
    rating: 5
  },
  {
    id: 4,
    text: "Superou nossas expectativas em todos os aspectos. O resultado final reflete perfeitamente nossa visão e valores.",
    author: "Marina Silva",
    role: "Arquiteta",
    image: "/public/banners/image-feedback/feedback-04.jpeg",
    rating: 5
  }
];
---

<section class="feedback">
  <div class="feedback-container">
    <!-- Header -->
    <div class="feedback-header">
      <div class="header-content">
        <div class="icon-wrapper">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5">
            <path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/>
          </svg>
        </div>
        <span class="header-label">Depoimentos</span>
      </div>
      <h2 class="feedback-title">O Que Nossos Clientes Dizem</h2>
      <p class="feedback-description">
        Descubra as experiências de quem confiou em nosso trabalho. Cada projeto é uma
        parceria única, construída com dedicação e excelência.
      </p>
    </div>

    <!-- Testimonials Cards -->
    <div class="testimonials-wrapper">
      {testimonials.map((testimonial, index) => (
        <article class="testimonial-card" data-index={index}>
          <div class="card-header">
            <div class="avatar-wrapper">
              <img src={testimonial.image} alt={testimonial.author} class="avatar" />
              <div class="avatar-ring"></div>
            </div>
            <div class="author-details">
              <h3 class="author-name">{testimonial.author}</h3>
              <p class="author-role">{testimonial.role}</p>
            </div>
            <div class="rating">
              {Array.from({ length: testimonial.rating }).map(() => (
                <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
              ))}
            </div>
          </div>

          <div class="card-body">
            <svg class="quote-mark" width="40" height="40" viewBox="0 0 24 24" fill="currentColor">
              <path d="M6 17h3l2-4V7H5v6h3zm8 0h3l2-4V7h-6v6h3z"/>
            </svg>
            <p class="testimonial-text">{testimonial.text}</p>
          </div>

          <div class="card-footer">
            <div class="decoration-line"></div>
          </div>
        </article>
      ))}
    </div>

    <!-- Stats Section -->
    <div class="stats-section">
      <div class="stat-item">
        <div class="stat-number">100+</div>
        <div class="stat-label">Projetos Concluídos</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-number">98%</div>
        <div class="stat-label">Satisfação dos Clientes</div>
      </div>
      <div class="stat-divider"></div>
      <div class="stat-item">
        <div class="stat-number">15+</div>
        <div class="stat-label">Anos de Experiência</div>
      </div>
    </div>
  </div>
</section>

<style>
  .feedback {
    background: #ECF0F1; /* MUDANÇA: #706d6d → #ECF0F1 (Neutral Light) */
    padding: 120px 20px;
    min-height: 100vh;
    position: relative;
  }

  .feedback-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  /* Header */
  .feedback-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
    margin-bottom: 24px;
  }

  .icon-wrapper {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: #E3735E; /* MUDANÇA: #d4a574 → #E3735E (TERRA COTA) */
    border-radius: 12px;
  }

  .icon-wrapper svg {
    color: #ffffff;
  }

  .header-label {
    font-size: 1rem;
    font-weight: 600;
    color: #2C3E50; /* MUDANÇA: #2a2a2a → #2C3E50 (Secondary) */
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  .feedback-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    color: #2C3E50; /* MUDANÇA: #1a1a1a → #2C3E50 (Secondary) */
    margin-bottom: 24px;
    line-height: 1.1;
  }

  .feedback-description {
    font-size: clamp(1rem, 1.5vw, 1.2rem);
    color: #7F8C8D; /* MUDANÇA: #2a2a2a → #7F8C8D (Neutral) */
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.8;
  }

  /* Testimonials Grid */
  .testimonials-wrapper {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 32px;
    margin-bottom: 80px;
  }

  .testimonial-card {
    background: #ffffff;
    border-radius: 24px;
    padding: 40px;
    display: flex;
    flex-direction: column;
    gap: 24px;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    position: relative;
    overflow: hidden;
  }

  .testimonial-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 4px;
    height: 100%;
    background: linear-gradient(to bottom, #E3735E, #F2A594); /* MUDANÇA: Gradiente terra cota */
    transform: scaleY(0);
    transform-origin: top;
    transition: transform 0.4s ease;
  }

  .testimonial-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(227, 115, 94, 0.2); /* MUDANÇA: Sombra terra cota */
  }

  .testimonial-card:hover::before {
    transform: scaleY(1);
  }

  /* Card Header */
  .card-header {
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
  }

  .avatar-wrapper {
    position: relative;
    width: 64px;
    height: 64px;
    flex-shrink: 0;
  }

  .avatar {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    object-fit: cover;
    object-position: center;
    position: relative;
    z-index: 2;
  }

  .avatar-ring {
    position: absolute;
    top: -4px;
    left: -4px;
    right: -4px;
    bottom: -4px;
    border-radius: 50%;
    background: linear-gradient(135deg, #E3735E, #F2A594); /* MUDANÇA: Gradiente terra cota */
    z-index: 1;
  }

  .author-details {
    flex: 1;
    min-width: 0;
  }

  .author-name {
    font-size: 1.1rem;
    font-weight: 700;
    color: #2C3E50; /* MUDANÇA: #1a1a1a → #2C3E50 */
    margin-bottom: 4px;
  }

  .author-role {
    font-size: 0.9rem;
    color: #7F8C8D; /* MUDANÇA: #666 → #7F8C8D */
    font-weight: 500;
  }

  .rating {
    display: flex;
    gap: 4px;
    color: #E3735E; /* MUDANÇA: #6b46c1 → #E3735E (TERRA COTA) */
  }

  /* Card Body */
  .card-body {
    position: relative;
    flex: 1;
  }

  .quote-mark {
    position: absolute;
    top: -10px;
    left: -10px;
    color: #E3735E; /* MUDANÇA: #6b46c1 → #E3735E (TERRA COTA) */
    opacity: 0.1;
  }

  .testimonial-text {
    font-size: 1.05rem;
    line-height: 1.8;
    color: #34495E; /* MUDANÇA: #333 → #34495E (Neutral Dark) */
    position: relative;
    z-index: 1;
  }

  /* Card Footer */
  .card-footer {
    margin-top: auto;
  }

  .decoration-line {
    width: 60px;
    height: 4px;
    background: linear-gradient(to right, #E3735E, #F2A594); /* MUDANÇA: Gradiente terra cota */
    border-radius: 2px;
  }

  /* Stats Section */
  .stats-section {
    display: flex;
    justify-content: space-around;
    align-items: center;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 24px;
    padding: 60px 40px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1);
  }

  .stat-item {
    text-align: center;
  }

  .stat-number {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 800;
    color: #E3735E; /* MUDANÇA: #d4a574 → #E3735E (TERRA COTA) */
    margin-bottom: 8px;
    line-height: 1;
  }

  .stat-label {
    font-size: 1rem;
    color: #7F8C8D; /* MUDANÇA: #666 → #7F8C8D */
    font-weight: 600;
  }

  .stat-divider {
    width: 1px;
    height: 80px;
    background: linear-gradient(to bottom, transparent, #E3735E, transparent); /* MUDANÇA: Terra cota */
  }

  /* Responsive */
  @media (max-width: 1024px) {
    .testimonials-wrapper {
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 28px;
    }

    .stats-section {
      padding: 50px 30px;
    }

    .stat-divider {
      height: 60px;
    }
  }

  @media (max-width: 768px) {
    .feedback {
      padding: 80px 20px;
    }

    .feedback-header {
      margin-bottom: 60px;
    }

    .testimonials-wrapper {
      grid-template-columns: 1fr;
      gap: 24px;
      margin-bottom: 60px;
    }

    .testimonial-card {
      padding: 32px;
    }

    .stats-section {
      flex-direction: column;
      gap: 40px;
      padding: 40px 24px;
    }

    .stat-divider {
      width: 80px;
      height: 1px;
      background: linear-gradient(to right, transparent, #E3735E, transparent); /* MUDANÇA: Terra cota */
    }
  }

  @media (max-width: 480px) {
    .card-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .rating {
      align-self: flex-start;
    }
  }
</style>

<script>
  // Animação de entrada dos cards
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const index = parseInt(entry.target.getAttribute('data-index') || '0');
        setTimeout(() => {
          entry.target.style.opacity = '1';
          entry.target.style.transform = 'translateY(0)';
        }, index * 100);
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.querySelectorAll('.testimonial-card').forEach((card) => {
    card.style.opacity = '0';
    card.style.transform = 'translateY(30px)';
    card.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
    observer.observe(card);
  });

  // Animação da seção de estatísticas
  const statsObserver = new IntersectionObserver((entries) => {
    entries.forEach((entry) => {
      if (entry.isIntersecting) {
        const statNumbers = entry.target.querySelectorAll('.stat-number');
        statNumbers.forEach((stat, index) => {
          setTimeout(() => {
            stat.style.opacity = '1';
            stat.style.transform = 'scale(1)';
          }, index * 150);
        });
        statsObserver.unobserve(entry.target);
      }
    });
  }, observerOptions);

  const statsSection = document.querySelector('.stats-section');
  if (statsSection) {
    const statNumbers = statsSection.querySelectorAll('.stat-number');
    statNumbers.forEach((stat) => {
      stat.style.opacity = '0';
      stat.style.transform = 'scale(0.8)';
      stat.style.transition = 'opacity 0.5s ease, transform 0.5s ease';
    });
    statsObserver.observe(statsSection);
  }
</script>