---
// Contact.astro - Contato com Envio de Email
const contactInfo = {
  email: "contato@arquitetura.com",
  phone: "+55 (11) 98765-4321",
  address: "Av. Paulista, 1000 - São Paulo, SP",
  coordinates: "-29.785444, -51.856444",
  social: [
    { name: "Instagram", icon: "instagram", link: "#" },
    { name: "LinkedIn", icon: "linkedin", link: "#" },
    { name: "Facebook", icon: "facebook", link: "#" },
    { name: "Behance", icon: "behance", link: "#" }
  ]
};
---

<section class="contact">
  <div class="contact-container">
    <!-- Header -->
    <div class="contact-header">
      <h2 class="contact-title">Vamos Conversar?</h2>
      <p class="contact-subtitle">
        Entre em contato conosco para discutir seu próximo projeto. Estamos prontos para
        transformar suas ideias em realidade.
      </p>
    </div>

    <!-- Main Grid -->
    <div class="contact-grid">
      <!-- Contact Form -->
      <div class="form-section-wrapper">
        <div class="form-section">
          <form class="contact-form" id="contactForm">
            <!-- Campos ocultos para FormSubmit -->
            <input type="hidden" name="_subject" value="Novo Contato - Site Arquitetura" />
            <input type="hidden" name="_captcha" value="false" />
            <input type="hidden" name="_template" value="box" />
            
            <div class="form-group">
              <label for="name">Nome Completo</label>
              <input 
                type="text" 
                id="name" 
                name="name" 
                placeholder="Seu nome"
                required
              />
            </div>

            <div class="form-group">
              <label for="email">E-mail</label>
              <input 
                type="email" 
                id="email" 
                name="email" 
                placeholder="seu@email.com"
                required
              />
            </div>

            <div class="form-group">
              <label for="phone">Telefone</label>
              <input 
                type="tel" 
                id="phone" 
                name="phone" 
                placeholder="(00) 00000-0000"
              />
            </div>

            <div class="form-group">
              <label for="service">Tipo de Serviço</label>
              <select id="service" name="service" required>
                <option value="">Selecione um serviço</option>
                <option value="residencial">Projeto Residencial</option>
                <option value="comercial">Projeto Comercial</option>
                <option value="interiores">Design de Interiores</option>
                <option value="consultoria">Consultoria</option>
                <option value="outro">Outro</option>
              </select>
            </div>

            <div class="form-group full-width">
              <label for="message">Mensagem</label>
              <textarea 
                id="message" 
                name="message" 
                rows="6"
                placeholder="Conte-nos sobre seu projeto..."
                required
              ></textarea>
            </div>

            <button type="submit" class="submit-button">
              <span class="button-text">Enviar Mensagem</span>
              <span class="button-loading" style="display: none;">Enviando...</span>
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 12h14M12 5l7 7-7 7"/>
              </svg>
            </button>
          </form>
        </div>

        <!-- Map Section -->
        <div class="map-section">
          <h3 class="map-title">Nossa Localização</h3>
          <div class="map-container">
            <iframe
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3452.8797682534847!2d-51.85893788488395!3d-29.78543738198879!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zMjnCsDQ3JzA3LjYiUyA1McKwNTEnMjMuMiJX!5e0!3m2!1spt-BR!2sbr!4v1234567890"
              allowfullscreen=""
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade"
            ></iframe>
          </div>
        </div>
      </div>

      <!-- Contact Info -->
      <div class="info-section">
        <!-- Contact Details -->
        <div class="info-card">
          <h3 class="info-title">Informações de Contato</h3>
          
          <div class="info-item">
            <div class="info-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
                <polyline points="22,6 12,13 2,6"/>
              </svg>
            </div>
            <div class="info-content">
              <p class="info-label">E-mail</p>
              <a href={`mailto:${contactInfo.email}`} class="info-value">{contactInfo.email}</a>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
              </svg>
            </div>
            <div class="info-content">
              <p class="info-label">Telefone</p>
              <a href={`tel:${contactInfo.phone.replace(/\D/g, '')}`} class="info-value">{contactInfo.phone}</a>
            </div>
          </div>

          <div class="info-item">
            <div class="info-icon">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
                <circle cx="12" cy="10" r="3"/>
              </svg>
            </div>
            <div class="info-content">
              <p class="info-label">Endereço</p>
              <p class="info-value">{contactInfo.address}</p>
            </div>
          </div>
        </div>

        <!-- Social Media -->
        <div class="social-card">
          <h3 class="social-title">Siga-nos</h3>
          <div class="social-links">
            {contactInfo.social.map((social) => (
              <a href={social.link} class="social-link" aria-label={social.name}>
                {social.icon === 'instagram' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
                  </svg>
                )}
                {social.icon === 'linkedin' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
                    <rect x="2" y="9" width="4" height="12"/>
                    <circle cx="4" cy="4" r="2"/>
                  </svg>
                )}
                {social.icon === 'facebook' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
                  </svg>
                )}
                {social.icon === 'behance' && (
                  <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M3 8h5.5a2.5 2.5 0 1 1 0 5H3V8z"/>
                    <path d="M3 13h6a3 3 0 1 1 0 6H3v-6z"/>
                    <path d="M14 7h7"/>
                    <path d="M17 13a3 3 0 1 1 3 3h-3v-3z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>

        <!-- Office Hours -->
        <div class="hours-card">
          <h3 class="hours-title">Horário de Atendimento</h3>
          <div class="hours-list">
            <div class="hours-item">
              <span class="hours-day">Segunda - Sexta</span>
              <span class="hours-time">09:00 - 18:00</span>
            </div>
            <div class="hours-item">
              <span class="hours-day">Sábado</span>
              <span class="hours-time">09:00 - 13:00</span>
            </div>
            <div class="hours-item">
              <span class="hours-day">Domingo</span>
              <span class="hours-time">Fechado</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal de Sucesso -->
  <div class="success-modal" id="successModal">
    <div class="modal-content">
      <div class="modal-icon">
        <svg width="64" height="64" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/>
          <polyline points="22 4 12 14.01 9 11.01"/>
        </svg>
      </div>
      <h3 class="modal-title">Mensagem Enviada!</h3>
      <p class="modal-text">
        Sua mensagem foi enviada com sucesso. Entraremos em contato em breve.
      </p>
      <button class="modal-button" id="closeModal">Fechar</button>
    </div>
  </div>
</section>

<style>
  .contact {
    background: #cbc7c7;
    padding: 100px 20px;
  }

  .contact-container {
    max-width: 1400px;
    margin: 0 auto;
  }

  /* Header */
  .contact-header {
    text-align: center;
    margin-bottom: 80px;
  }

  .contact-title {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    color: #000000;
    margin-bottom: 24px;
  }

  .contact-subtitle {
    font-size: clamp(1rem, 1.5vw, 1.2rem);
    color: #000000;
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.8;
  }

  /* Main Grid */
  .contact-grid {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 60px;
  }

  /* Form Section Wrapper */
  .form-section-wrapper {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  /* Form Section */
  .form-section {
    background: #3a4a4e;
    padding: 40px;
    border-radius: 20px;
  }

  .contact-form {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  .form-group.full-width {
    grid-column: span 2;
  }

  .form-group label {
    font-size: 0.9rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 6px;
  }

  .form-group input,
  .form-group select,
  .form-group textarea {
    padding: 12px 16px;
    border: 2px solid #4a5a5e;
    border-radius: 10px;
    font-size: 0.95rem;
    color: #ffffff;
    background: #2d3b3e;
    transition: all 0.3s ease;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group select:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #d4a574;
    box-shadow: 0 0 0 4px rgba(212, 165, 116, 0.15);
  }

  .form-group input::placeholder,
  .form-group textarea::placeholder {
    color: #666666;
  }

  .form-group select {
    color: #666666;
  }

  .form-group select:valid {
    color: #ffffff;
  }

  .form-group textarea {
    resize: vertical;
    min-height: 120px;
  }

  .submit-button {
    grid-column: span 2;
    padding: 14px 36px;
    background: #d4a574;
    color: #2d3b3e;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    transition: all 0.3s ease;
    margin-top: 4px;
  }

  .submit-button:hover:not(:disabled) {
    background: #c49564;
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(212, 165, 116, 0.3);
  }

  .submit-button:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  /* Map Section */
  .map-section {
    background: #3a4a4e;
    padding: 40px;
    border-radius: 20px;
  }

  .map-title {
    font-size: 1.4rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 20px;
  }

  .map-container {
    width: 100%;
    height: 400px;
    border-radius: 12px;
    overflow: hidden;
  }

  .map-container iframe {
    width: 100%;
    height: 100%;
    border: none;
  }

  /* Info Section */
  .info-section {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .info-card,
  .social-card,
  .hours-card {
    background: #3a4a4e;
    padding: 32px;
    border-radius: 20px;
  }

  .info-title,
  .social-title,
  .hours-title {
    font-size: 1.4rem;
    font-weight: 600;
    color: #ffffff;
    margin-bottom: 24px;
  }

  .info-item {
    display: flex;
    gap: 16px;
    margin-bottom: 24px;
  }

  .info-item:last-child {
    margin-bottom: 0;
  }

  .info-icon {
    width: 48px;
    height: 48px;
    background: #2d3b3e;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #d4a574;
    flex-shrink: 0;
  }

  .info-content {
    flex: 1;
  }

  .info-label {
    font-size: 0.85rem;
    color: #888888;
    margin-bottom: 4px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .info-value {
    font-size: 1rem;
    color: #ffffff;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  a.info-value:hover {
    color: #d4a574;
  }

  /* Social Links */
  .social-links {
    display: flex;
    gap: 12px;
  }

  .social-link {
    width: 48px;
    height: 48px;
    background: #2d3b3e;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #ffffff;
    transition: all 0.3s ease;
    text-decoration: none;
  }

  .social-link:hover {
    background: #d4a574;
    color: #2d3b3e;
    transform: translateY(-3px);
  }

  /* Hours */
  .hours-list {
    display: flex;
    flex-direction: column;
    gap: 16px;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 12px 0;
    border-bottom: 1px solid #4a5a5e;
  }

  .hours-item:last-child {
    border-bottom: none;
  }

  .hours-day {
    font-size: 0.95rem;
    color: #888888;
    font-weight: 500;
  }

  .hours-time {
    font-size: 0.95rem;
    color: #ffffff;
    font-weight: 600;
  }

  /* Success Modal */
  .success-modal {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 9999;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
  }

  .success-modal.show {
    opacity: 1;
    visibility: visible;
  }

  .modal-content {
    background: #ffffff;
    padding: 48px;
    border-radius: 24px;
    text-align: center;
    max-width: 500px;
    margin: 20px;
    transform: scale(0.8);
    transition: transform 0.3s ease;
  }

  .success-modal.show .modal-content {
    transform: scale(1);
  }

  .modal-icon {
    width: 80px;
    height: 80px;
    background: #d4a574;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 24px;
  }

  .modal-icon svg {
    color: #ffffff;
  }

  .modal-title {
    font-size: 2rem;
    font-weight: 700;
    color: #1a1a1a;
    margin-bottom: 16px;
  }

  .modal-text {
    font-size: 1.1rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 32px;
  }

  .modal-button {
    padding: 14px 40px;
    background: #d4a574;
    color: #ffffff;
    border: none;
    border-radius: 50px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .modal-button:hover {
    background: #c49564;
    transform: translateY(-2px);
  }

  @media (max-width: 1024px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: 40px;
    }
  }

  @media (max-width: 768px) {
    .contact {
      padding: 60px 20px;
    }

    .contact-header {
      margin-bottom: 60px;
    }

    .form-section {
      padding: 32px 24px;
    }

    .contact-form {
      grid-template-columns: 1fr;
    }

    .form-group.full-width,
    .submit-button {
      grid-column: span 1;
    }

    .info-card,
    .social-card,
    .hours-card {
      padding: 24px;
    }

    .map-section {
      padding: 32px 24px;
    }

    .map-container {
      height: 300px;
    }

    .modal-content {
      padding: 32px 24px;
    }
  }
</style>

<script>
  const form = document.getElementById('contactForm') as HTMLFormElement;
  const successModal = document.getElementById('successModal');
  const closeModalBtn = document.getElementById('closeModal');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const button = form.querySelector('.submit-button') as HTMLButtonElement;
    const buttonText = button.querySelector('.button-text') as HTMLElement;
    const buttonLoading = button.querySelector('.button-loading') as HTMLElement;
    
    // Mostrar loading
    buttonText.style.display = 'none';
    buttonLoading.style.display = 'inline';
    button.disabled = true;

    try {
      const formData = new FormData(form);
      
      // Enviar para FormSubmit
      const response = await fetch('https://formsubmit.co/christianoestraich@gmail.com', {
        method: 'POST',
        body: formData,
        headers: {
          'Accept': 'application/json'
        }
      });

      if (response.ok) {
        // Mostrar modal de sucesso
        successModal?.classList.add('show');
        
        // Limpar formulário
        form.reset();
      } else {
        alert('Erro ao enviar mensagem. Por favor, tente novamente.');
      }
    } catch (error) {
      console.error('Erro:', error);
      alert('Erro ao enviar mensagem. Por favor, tente novamente.');
    } finally {
      // Restaurar botão
      buttonText.style.display = 'inline';
      buttonLoading.style.display = 'none';
      button.disabled = false;
    }
  });

  // Fechar modal
  closeModalBtn?.addEventListener('click', () => {
    successModal?.classList.remove('show');
  });

  // Fechar modal clicando fora
  successModal?.addEventListener('click', (e) => {
    if (e.target === successModal) {
      successModal.classList.remove('show');
    }
  });

  // Máscara de telefone
  const phoneInput = document.getElementById('phone') as HTMLInputElement;
  
  phoneInput?.addEventListener('input', (e) => {
    let value = (e.target as HTMLInputElement).value.replace(/\D/g, '');
    
    if (value.length <= 11) {
      value = value.replace(/^(\d{2})(\d)/g, '($1) $2');
      value = value.replace(/(\d)(\d{4})$/, '$1-$2');
    }
    
    (e.target as HTMLInputElement).value = value;
  });
</script>