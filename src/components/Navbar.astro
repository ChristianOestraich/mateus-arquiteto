---
// Navbar.astro
const navItems = [
  { name: "Serviços", href: "/services/residencial", delay: "0.4s" },
  { name: "Portfolio", href: "#portfolio", delay: "0.3s" },
  { name: "Feedback", href: "/feedback/feedback", delay: "0.3s" },
  { name: "Sobre", href: "/about/about", delay: "0.2s" },
  { name: "Contato", href: "/contact/contato", delay: "0.5s" },
];
---

<button class="burger" id="burger" aria-label="Toggle menu">
  <span class="burger-icon"></span>
</button>

<div class="menu" id="menu">
  <nav>
    {
      navItems.map((item) => (
        <a href={item.href} style={`animation-delay: ${item.delay}`}>
          {item.name}
        </a>
      ))
    }
  </nav>
</div>

<style>
  :global(body) {
    margin: 0;
    padding: 0;
    font-family:
      -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue",
      Arial, sans-serif;
    color: #f7f7f7;
    background-image: url("https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=1920&q=80");
    background-size: cover;
    background-repeat: no-repeat;
    background-position: 20% 0;
    min-height: 100vh;
  }

  .burger,
  .menu {
    position: fixed;
  }

  .burger {
    z-index: 3;
    top: 0;
    left: 0;
    display: grid;
    place-items: center;
    width: 100px;
    height: 100px;
    border: 0;
    padding: 0;
    background: transparent;
    cursor: pointer;
  }

  .menu {
    z-index: 2;
    top: 0;
    left: 0;
    display: grid;
    place-items: center;
    width: 50%;
    max-width: 400px;
    height: 100%;
    background: rgba(0, 0, 0, 0.4);
    backdrop-filter: blur(10px);
    translate: -100% 0;
    transition: translate 0.425s cubic-bezier(0.175, 0.885, 0.32, 1);
  }

  .menu nav {
    opacity: 0;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 60%;
  }

  .menu a {
    position: relative;
    color: #f9f9f9;
    font-size: 30px;
    padding: 18px 0;
    height: 80px;
    width: 100%;
    text-decoration: none;
    text-align: center;
    transition: 0.4s;
  }

  .menu a::before,
  .menu a::after {
    content: "";
    position: absolute;
    bottom: 10px;
    width: 100%;
    height: 2px;
    transition: 0.4s;
  }

  .menu a::before {
    opacity: 0;
    background: rgba(255, 255, 255, 0.2);
  }

  .menu a::after {
    transform: scaleX(0);
    transform-origin: 0% 50%;
    background: #f7f7f7;
  }

  .menu a:hover {
    opacity: 1;
  }

  .menu a:hover::before {
    opacity: 1;
  }

  .menu a:hover::after {
    transform: scaleX(1);
  }

  /* Burger Icon */
  .burger-icon {
    position: relative;
  }

  .burger-icon,
  .burger-icon::before,
  .burger-icon::after {
    display: block;
    border-radius: 2px;
    height: 2px;
    background: #f9f9f9;
    transition: 0.3s;
    transition-timing-function: ease-in-out;
    transition-duration: 0.2s;
  }

  .burger-icon::before,
  .burger-icon::after {
    content: "";
    position: absolute;
    left: 0;
    width: 16px;
  }

  .burger-icon {
    width: 16px;
  }

  .burger-icon::before {
    top: -8px;
  }

  .burger-icon::after {
    top: 8px;
  }

  /* Open State */
  :global(body.open) .menu {
    opacity: 1;
    visibility: visible;
    translate: 0;
    animation: menu-in 0.425s;
  }

  :global(body.open) .menu nav {
    opacity: 1;
  }

  :global(body.open) .menu a {
    animation: appear 0.25s backwards;
  }

  :global(body.open) .burger-icon {
    transform: rotate(-45deg);
  }

  :global(body.open) .burger-icon::before {
    transform: rotate(90deg) translate(10px, -1px);
  }

  :global(body.open) .burger-icon::after {
    transform: rotate(90deg) translate(-9px, 1px);
  }

  /* Keyframes */
  @keyframes menu-in {
    0% {
      clip-path: ellipse(0% 0% at 0% 50%);
    }
    100% {
      clip-path: ellipse(120% 120% at 0% 50%);
    }
  }

  @keyframes appear {
    0% {
      opacity: 0;
      translate: -30px 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>

<script>
  const burger = document.getElementById("burger");
  const menu = document.getElementById("menu");
  const menuLinks = menu?.querySelectorAll("a");

  function toggleMenu() {
    document.body.classList.toggle("open");
  }

  burger?.addEventListener("click", toggleMenu);

  // Scroll suave para seções
  menuLinks?.forEach((link) => {
    link.addEventListener("click", (e) => {
      const href = link.getAttribute("href");

      // Se for link interno (#), faz scroll suave
      if (href?.startsWith("#")) {
        e.preventDefault();
        const targetId = href.substring(1);
        const targetElement = document.getElementById(targetId);

        if (targetElement) {
          document.body.classList.remove("open");

          setTimeout(() => {
            targetElement.scrollIntoView({
              behavior: "smooth",
              block: "start",
            });
          }, 300);
        }
      } else {
        // Se não for link interno, apenas fecha o menu
        document.body.classList.remove("open");
      }
    });
  });

  // Close menu on Escape key
  document.addEventListener("keydown", (e) => {
    if (e.key === "Escape" && document.body.classList.contains("open")) {
      document.body.classList.remove("open");
    }
  });
</script>
